version: "3.9"

services:
  app:
    image: ghcr.io/ivanutkov/load-test-analizator:latest
    container_name: diploma-app
    restart: always
    ports:
      - "8000:8000"
    env_file:
      - .env

  grafana:
    image: grafana/grafana:latest
    container_name: diploma-grafana
    restart: always
    ports:
      - "3000:3000"
    volumes:
      - ./grafana:/var/lib/grafana

  node_exporter:
    image: prom/node-exporter:latest
    container_name: diploma-node-exporter
    restart: always
    ports:
      - "9100:9100"

  prometheus:
    image: prom/prometheus:latest
    container_name: diploma-prometheus
    restart: always
    ports:
      - "9090:9090"
    volumes:
      - ./prometheus:/etc/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'

